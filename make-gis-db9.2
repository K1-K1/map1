#!/usr/bin/env bash


createdb -E UTF8 -O $2 $1
createlang plpgsql $1
psql -d $1 -f /usr/local/pgsql/share/contrib/postgis-2.0/postgis.sql
psql -d $1 -f /usr/local/pgsql/share/contrib/postgis-2.0/spatial_ref_sys.sql
psql $1 -c "ALTER TABLE geometry_columns OWNER TO $2"
psql $1 -c "ALTER TABLE geography_columns OWNER TO $2"
psql $1 -c "ALTER TABLE spatial_ref_sys OWNER TO $2"
