#LAYER_OPTIONS='{"0":{"colorToAlpha": [255,255,255,255], "opacity": 1.0},"1":{"colorToAlpha": [255,255,255,255], "opacity": 0.5}}'
#MAPNIK_MAP_FILES="hillshade;boundary;contour"


#MAPNIK_MAP_FILES="ferry"	
#LAYER_OPTIONS='{}'

