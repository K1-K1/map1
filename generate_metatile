#!/usr/bin/env bash

case "$3" in
18) 
	hillshade_opacity=0.5
	;;
17) 
	hillshade_opacity=0.6
	;;
16) 
	hillshade_opacity=0.7
	;;
15) 
	hillshade_opacity=0.8
	;;
14) 
	hillshade_opacity=0.9
